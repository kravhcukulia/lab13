import tkinter as tk
import math

def calculate_sum():
    try:
        x = float(entry.get())
        total = 0
        for k in range(1, 8):
            numerator = k * x * math.cos(x + k)
            denominator = math.log(2 + x) + 2 * k
            total += numerator / denominator
        result_label.config(text=f"Результат: {total:.4f}")
    except Exception:
        result_label.config(text="Помилка у введенні")

# Створення головного вікна
root = tk.Tk()
root.title("Проєкт 'Сума'")

# Додавання зображення
label_image = tk.Label(root)
label_image.grid(row=0, column=0, columnspan=2)

try:
    photo = tk.PhotoImage(file="C:/Users/Asus/Desktop/lab13/lab13.3.png")
    label_image.configure(image=photo)
    label_image.image = photo  # зберігаємо посилання
except Exception:
    label_image.config(text="Не вдалося завантажити зображення")

# Ввідні елементи
tk.Label(root, text="Введіть x:").grid(row=1, column=0)
entry = tk.Entry(root)
entry.grid(row=1, column=1)

# Кнопка обчислення
tk.Button(root, text="Обчислити", command=calculate_sum).grid(row=2, column=0, columnspan=2)

# Виведення результату
result_label = tk.Label(root, text="Результат:")
result_label.grid(row=3, column=0, columnspan=2)

# Запуск головного циклу
root.mainloop()

